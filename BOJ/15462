#include <iostream>
#include <string>
#include <cstdio>
#include <cstring>
#include <cmath>
#include <algorithm>
#include <stack>
#include <queue>
#include <vector>
#include <deque>
#include <bitset>
#include <set>
#include <map>
using namespace std;
#define inf 2000000000
#define mod 1000000007
int visit[100001],s,e,n,arr[100001],check[100001];
void dfs(int now, int cnt){
	if(check[now]) return;
	if(visit[now]) {
		e=cnt;
		s=visit[now];
		return;
	}
	visit[now] = cnt;
	dfs( arr[now], cnt+1);
}

void efs(int now, int cnt){
	if(cnt >e) return;
	if(cnt >= s && cnt <= e) check[now] = true;
	if(visit[now] == false) return;
	efs( arr[now], cnt+1);
}
int main() {
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    cin >> n;
	for(int i=1;i<=n;i++) cin >> arr[i];
	int ans = 0;
	
	for(int i=1;i<=n;i++){
		if(check[i] == false){
			memset(visit, 0, sizeof(visit) );
			s=-1, e=-1;
			dfs(i, 1);
	
			if(s != -1 && e != -1){
				ans += e-s;
				efs(i,1);
			}	
		}
	}
	cout << ans;
}
